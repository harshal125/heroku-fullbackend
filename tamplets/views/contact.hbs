<body>


  {{!-- adding navbar.hbs --}}
  {{>navbar}}

  <div class="container mt-5">
        <form class="mt-5 my-5 pt-3" action="/contact" method="POST">
            <div class="form-group mt-5 ">
                <label for="exampleFormControlInput1"> Name</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="name"
                    placeholder="please Enter your full name">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Email </label>
                <input type="email" class="form-control" id="exampleFormControlInput1" name="emails" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">phone</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" name="phone"
                    placeholder="Enter your active number">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Address</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="add"
                    placeholder="Enter your current address">
            </div>
    <div class="form-group ">
        <label for="exampleFormControlTextarea1">Write Here</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="space" rows="3"></textarea>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
    </form>
    </div>

  {{>footer}}
  {{!-- footer is added here --}}


